{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022"],
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "sourceMap": true
  },
  "include": ["scripts/**/*.ts", "src/modules/**/*.ts", "prisma/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
